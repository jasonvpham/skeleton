{% include 'layout/header.html.twig' %}

{% block content %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <form action="{{ path('security_login') }}" method="post">
        <label for="email" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" name="_email" id="email" class="form-control" placeholder="Email" required autofocus>

        <label for="password" class="sr-only">Password</label>
        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}

{% include 'layout/footer.html.twig' %}
